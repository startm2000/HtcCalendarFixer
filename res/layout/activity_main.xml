    <Button
        android:id="@+id/bt2"
        android:text="Make issue happen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"/>
    
    <Button
        android:id="@+id/bt3"
        android:text="Fix it"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"/>

